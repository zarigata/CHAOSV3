{
  "name": "@chaos/backend",
  "version": "0.1.0",
  "private": true,
  "description": "Backend server for C.H.A.O.S.",
  "main": "dist/index.js",
  "scripts": {
    "dev": "nodemon --exec ts-node src/index.ts",
    "build": "tsc",
    "start": "node dist/index.js",
    "test": "jest",
    "test:unit": "jest --testMatch='**/*.test.ts' --testPathPattern='test/unit'",
    "test:integration": "jest --testMatch='**/*.test.ts' --testPathPattern='test/integration'",
    "test:e2e": "jest --testMatch='**/*.test.ts' --testPathPattern='test/e2e'",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:ci": "jest --ci --runInBand --detectOpenHandles --forceExit",
    "lint": "eslint src --ext .ts",
    "lint:fix": "eslint src --ext .ts --fix",
    "format": "prettier --write \"src/**/*.ts\"",
    "prisma:generate": "prisma generate",
    "prisma:migrate": "prisma migrate dev",
    "prisma:studio": "prisma studio"
  },
  "dependencies": {
    "@chaos/backend": "file:",
    "@fastify/cors": "^8.2.1",
    "@fastify/jwt": "^7.2.4",
    "@fastify/rate-limit": "^10.3.0",
    "@fastify/swagger": "^8.3.1",
    "@prisma/client": "^4.14.1",
    "bcrypt": "^5.1.0",
    "dotenv": "^16.0.3",
    "fastify": "^4.17.0",
    "fastify-socket.io": "^4.0.0",
    "ioredis": "^5.6.1",
    "nodemailer": "^7.0.3",
    "pino-pretty": "^10.0.0",
    "socket.io": "^4.6.1",
    "zod": "^3.21.4"
  },
  "devDependencies": {
    "@fastify/type-provider-typebox": "^5.1.0",
    "@types/bcrypt": "^5.0.2",
    "@types/jest": "^29.5.14",
    "@types/jsonwebtoken": "^9.0.9",
    "@types/node": "^20.17.47",
    "@types/nodemailer": "^6.4.17",
    "@types/supertest": "^6.0.3",
    "@types/swagger-schema-official": "^2.0.25",
    "@types/uuid": "^10.0.0",
    "@typescript-eslint/eslint-plugin": "^5.59.8",
    "@typescript-eslint/parser": "^5.59.8",
    "eslint": "^8.42.0",
    "jest": "^29.7.0",
    "jest-environment-node": "^29.7.0",
    "jest-mock-extended": "^4.0.0-beta1",
    "nodemon": "^2.0.22",
    "prisma": "^4.14.1",
    "socket.io-client": "^4.8.1",
    "supertest": "^6.3.4",
    "ts-jest": "^29.3.4",
    "ts-node": "^10.9.1",
    "typescript": "^5.1.3"
  }
}
